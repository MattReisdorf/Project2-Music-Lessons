<div class="card">
    <div class="card-header new-lesson">
        Create New Lesson
    </div>
    <form method="LESSON" action="/api/lessons" class="card-body">
       <div class="form-group">
           <label class="form-label" for="title">Title</label>
           <input type="text" name="title" class="col-sm-12 form-input" id="title"/>
       </div>
       <div class="form-group">
           <label class="form-label" for="content">Content</label>
           <textarea type="text" name="content" class="col-sm-12 form-input" id="content"></textarea>
       </div>
       <div class="form-group newlesson-btn">
           <button type="submit" class="col-sm-12 btn btn-dark" id="create-post">Create</button>
       </div>
    </form>
</div>