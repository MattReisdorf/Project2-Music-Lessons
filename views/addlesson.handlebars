<div class="card center-screen">
    <div class="card-header new-lesson">
        Create New Lesson
    </div>
    <form method="POST" action="/api/lessons" class="card-body">
       <div class="form-group">
           <label class="form-label" for="title">Lesson Name</label>
           <input type="text" name="title" class="col-sm-12 form-input" id="title"/>
       </div>
       <div class = "form-group">
           <label class = "form-label" for = "note_0">First Note</label>
           <textarea type = "text" name = "note_0" maxlength="1" class="col-sm-12 form-input" id = "note_0"></textarea>
       </div>
       <div class = "form-group">
           <label class = "form-label" for = "note_1">Second Note</label>
           <textarea type = "text" name = "note_1" maxlength="1" class="col-sm-12 form-input" id = "note_1"></textarea>
       </div>
       <div class = "form-group">
           <label class = "form-label" for = "note_2">Third Note</label>
           <textarea type = "text" name = "note_2" maxlength="1" class="col-sm-12 form-input" id = "note_2"></textarea>
       </div>
       <div class = "form-group">
           <label class = "form-label" for = "note_3">Fourth Note</label>
           <textarea type = "text" name = "note_3" maxlength="1" class="col-sm-12 form-input" id = "note_3"></textarea>
       </div>
       <div class = "form-group">
           <label class = "form-label" for = "note_4">Fifth Note</label>
           <textarea type = "text" name = "note_4" maxlength="1" class="col-sm-12 form-input" id = "note_4"></textarea>
       </div>
       <div class = "form-group">
           <label class = "form-label" for = "note_5">Sixth Note</label>
           <textarea type = "text" name = "note_5" maxlength="1" class="col-sm-12 form-input" id = "note_5"></textarea>
       </div>
       <div class = "form-group">
           <label class = "form-label" for = "note_6">Seventh Note</label>
           <textarea type = "text" name = "note_6" maxlength="1" class="col-sm-12 form-input" id = "note_6"></textarea>
       </div>
       <div class="form-group newlesson-btn">
           <button type="submit" class="col-sm-12 btn btn-dark" id="create-post">Create Lesson</button>
       </div>
    </form>
</div>



